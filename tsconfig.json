{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "module": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}