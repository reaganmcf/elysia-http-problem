{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "module": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": true,
    "types": ["bun"],
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
